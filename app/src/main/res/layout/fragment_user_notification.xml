<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:padding="@dimen/fifteen_sp">
        <android.support.v7.widget.AppCompatImageView android:layout_width="@dimen/two_hundred_dp"
                                                      android:layout_height="@dimen/two_hundred_dp"
                                                      app:srcCompat="@drawable/no_notification"/>
        <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:text="@string/no_notification"
                                                     android:fontFamily="@font/futura"
                                                     android:textStyle="bold"
                                                     android:textSize="@dimen/eighteen_sp"
                                                     android:textColor="@color/grey_800"/>
        <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:text="@string/no_notification_msg"
                                                     android:fontFamily="@font/futura"
                                                     android:textSize="@dimen/fifteen_sp"
                                                     android:textColor="@color/grey_600"
                                                     android:gravity="center"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>