<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="@drawable/grad_toolbar"
              android:orientation="vertical"
              android:gravity="center">
    <android.support.v7.widget.AppCompatImageView android:layout_width="@dimen/hundred_dp"
                                                  android:layout_height="@dimen/hundred_dp"
                                                  app:srcCompat="@drawable/placie"/>
    <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="Placie"
                                                 android:fontFamily="@font/futura"
                                                 android:textColor="@color/white"
                                                 android:textSize="@dimen/twenty_one_sp"/>

    <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:text="Let's get placed"
                                                 android:fontFamily="@font/futura"
                                                 android:textColor="@color/grey_400"
                                                 android:textSize="@dimen/fifteen_sp"/>
</LinearLayout>